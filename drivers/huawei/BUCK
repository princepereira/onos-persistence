    test_deps = TEST_DEPS,
    resources_root = 'src/main/resources',
    resources = glob(['src/main/resources/**']),
)

onos_app(
    app_name = 'org.onosproject.drivers.huawei',
    title = 'Huawei Drivers',
    category = 'Drivers',
    url = 'http://onosproject.org',
    description = 'Adds support for Huawei devices.',
